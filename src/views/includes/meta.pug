head
  meta(charset='utf-8')
  meta(name='viewport', content='width=device-width, initial-scale=1')

  if pageTitle
    title #{pageTitle} - #{siteTitle}
  else
    title #{siteTitle}

  meta(name="description" content=pageSummary)
    
  link(href="/styles/style.css", rel="stylesheet")
  link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  //- link(rel="canonical" href=`${siteUrl}${pageUrl}`)
  //- link(rel="alternate" type="application/rss+xml" title=siteTitle href=`${siteUrl}feed.xml`)

  // metadata for site link in Facebook
  meta(property="og:type" content="website")
  meta(property="og:title" content=pageTitle)
  meta(property="og:description" content=pageSummary)
  //- meta(property="og:image" content=) // 이미지 경로 (보통 프로필 이미지)
  //- meta(property="og:url" content=`${siteUrl}${pageUrl}`)

  // metadata for site link in Twitter
  meta(name="twitter:card" content="summary")
  //- meta(name="twitter:site" content="`@${twitterUsername}`) // 트위터 카드를 게시할 계정명
  meta(name="twitter:title" content=pageTitle)
  meta(name="twitter:description" content=pageSummary)
  //- meta(name="twitter:url" content=`${siteUrl}${pageUrl}`)

